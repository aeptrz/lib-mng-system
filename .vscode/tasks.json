{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++: Build",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Book.cpp",
                "${workspaceFolder}/Member.cpp",
                "${workspaceFolder}/Loan.cpp",
                "${workspaceFolder}/Library.cpp",
                "-o",
                "${workspaceFolder}/school_admin"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}